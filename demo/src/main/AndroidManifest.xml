<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.ai.fprovider.demo">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.github.ai.fprovider.demo.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.github.ai.fprovider.provider_authority"
            android:value="com.github.ai.fprovider.demo.files" />

        <provider
            android:name="com.github.ai.fprovider.InternalStorageFileProvider"
            android:authorities="com.github.ai.fprovider.demo.files"
            android:enabled="true"
            android:exported="true" />

    </application>

</manifest>
